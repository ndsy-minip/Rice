<questionSelection questionNum='{{mbti.length+1}}' wx:if="{{showSelection}}"></questionSelection>
<view style="height:100%" class="bg-white light">
  <view class="text-center">
    {{now_index+1}} / {{mbti.length}}
  </view>
  <view>
    {{mbti[now_index].quiz_en}}
  </view>
  <view>
    {{mbti[now_index].quiz_zh}}
  </view>
  <view>
    {{mbti[now_index].answera_en}}
  </view>
  <view>
    {{mbti[now_index].answera_zh}}
  </view>
  <view>
    {{mbti[now_index].answerb_en}}
  </view>
  <view>
    {{mbti[now_index].answerb_zh}}
  </view>

  <view class="padding flex shadow shadow-lg bg-gray text-blue bg-white margin"
    style="position: absolute; bottom: 20rpx;width:92vw">
    <view bindtap="changeQuiz" id="previous" disabled="{{now_index==0}}" class="flex-sub margin-left text-left">
      <text class="cuIcon-back"></text>
      上一题
    </view>
    <view class="flex-sub text-center" bindtap="showSelection">
      <view>{{now_index+1}} / {{mbti.length}}</view>
      答题卡
    </view>
    <view bindtap="changeQuiz" id="next" wx:if="{{now_index!=mbti.length-1}}" class="flex-sub text-right margin-right">
      下一题 <text class="cuIcon-right"></text>
    </view>
    <view bindtap="changeQuiz" wx:if="{{now_index==mbti.length-1}}" class="flex-sub">提交</view>
  </view>
</view>