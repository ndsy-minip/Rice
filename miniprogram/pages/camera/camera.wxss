/* pages/camera/camera.wxss */
.camera {
  width: 430rpx;
  height: 430rpx;
  border-radius: 50%;
  position: relative;
}

.camera image {
  position: absolute;
  width: 100%;
  height: 88%;
  z-index: 10;
}

.camera camera {
  width: 100vw;
  height: 90vh;
}

.btn {
  border-radius: 50%;
  height: 150rpx;
  width: 150rpx;
  background-color: rgba(255, 255, 255, 0.6);
  transition: transform 0.3s;
}

.foot{
  position: fixed;
  bottom: 20rpx;
  left: 0;
  width: 100vw;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 180rpx;
}


.btn-hover {
  transform: scale(0.9, 0.9);
}