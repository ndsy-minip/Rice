/**app.wxss**/
@import "components/colorui/main.wxss";
@import "components/colorui/icon.wxss";
@import "components/colorui/animation.wxss";
@import "/wxParse/wxParse.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 统一英语字体 */
.font-en {
  font-family: "宋体"
}

/* 圆圈样式 */
.circle-item {
  border-style: solid;
  border-radius: 50%;
  width: 70rpx;
  height: 70rpx;
  border-width: 2rpx;
  border-color: #0081ff;
}

sup {
  font-size: 15rpx;
  vertical-align: text-top;
}

sub {
  font-size: 15rpx;
  vertical-align: text-bottom;
}

.movable-view {
  pointer-events: auto;
  height: 100rpx;
  width: 100rpx;
  left: 38vw;
  top: 80vh;
  margin: auto;
  border-radius: 30%;
  text-align: center;
}

.movable-area {
  pointer-events: none;
  z-index: 100;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}