/* pages/timer/timer.wxss */
.timer-page {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgb(33, 150, 243), rgb(244, 67, 54));
}

.timer-card {
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 30rpx;
  margin-top: 20vh;
  height: 20vh;
  transition: transform 0.3s;
  padding-top: 10rpx;
}

.timer-card-hover {
  transform: scale(1.1, 1.1);
}

.btn {
  border-radius: 50%;
  height: 120rpx;
  width: 120rpx;
  background-color: rgba(255, 255, 255, 0.3);
  transition: transform 0.3s;
}

.btn-hover {
  transform: scale(0.9, 0.9);
}