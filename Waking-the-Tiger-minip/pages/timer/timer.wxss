/* pages/timer/timer.wxss */
.timer-page {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background:linear-gradient(to top, rgb(33, 150, 243), rgb(244, 67, 54));
  /* background-image: url(https://images.unsplash.com/photo-1589810264340-0ce27bfbf751?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=687&q=80); */
}

.timer-card {
  background-color: rgba(255, 255, 255,0.5);
  border-radius: 30rpx;
  margin-top: 30vh;
  height: 20vh;
  opacity: 0.4;
  transition: transform 0.3s;
}

.timer-card-hover {
  transform: scale(1.1, 1.1);
}

.start-btn {
  border-radius: 50%;
  height: 120rpx;
  width: 120rpx;
  opacity: 0.4;
  transition: transform 0.3s;
}

.start-btn-hover{
  transform: scale(0.9, 0.9);
}