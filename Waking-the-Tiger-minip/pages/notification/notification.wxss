/* pages/notification/notification.wxss */

.movable-view {
  pointer-events: auto;
  height: 100rpx;
  width: 100rpx;
  left: 0vw;
  top: 90vh;
  margin: auto;
  border-radius: 30%;
  text-align: center;
}

.movable-area {
  pointer-events: none;
  z-index: 100;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}


.noData{
  width:100%;
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;
  justify-content: center;
  align-items: center;
}
.noData image{
  width:300rpx;
}
.noData view{
  font-size: 24rpx;
  color:#888;
  margin-top: 40rpx;
}