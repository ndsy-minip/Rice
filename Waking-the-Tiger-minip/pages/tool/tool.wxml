<!--pages/tool/tool.wxml-->
<navBar-custom title="农业直播"></navBar-custom>

  <view class="bg-white flex" style="height:15vh">
    <view class="padding flex-twice" style="height: 100%;">
      <view class="text-xl text-bold">Hi! 欢迎来到心绪宇宙!</view>
      <view class="text-grey margin-top">在这里，不同人在不同心绪下所创造的作品汇聚一隅，尽情享受吧！</view>
    </view>
    <view class="flex-sub" style="height: 100%;">
      <image src="cloud://cloud1-3gp8ynahdb4ea1a5.636c-cloud1-3gp8ynahdb4ea1a5-1310409999/william-shakespeare.png" style="width: 30vw;height:15vh" mode="aspectFit"></image>
    </view>
  </view>

<view class="margin padding shadow-blur radius margin-top" style="height:20vh;border-radius: 50rpx;background-color: #888afb;"></view>

<!-- <view class="margin padding bg-blue light shadow-blur radius margin-top" style="height:5vh;border-radius: 50rpx;"></view> -->

<swiper class="screen-swiper round-dots" style="height:44vh">
  <block wx:for="{{tools}}" wx:for-item="item_" wx:for-key="index_" wx:key="index_">
    <swiper-item>
      <view class="grid col-2">
        <block wx:for="{{item_}}" wx:key="index">
          <view class="padding-bottom-sm padding-top-sm padding-left padding-right animation-slide-bottom" style="height:20vh;animation-delay:{{ (index + 1)*0.2 + 's'}}">
            <view class="shadow-blur radius" style="height:100%;width:100%;border-radius: 50rpx;background-color: {{item.bgColor}};" bindtap="navToFunc" data-path="{{item.path}}">
              <view class="padding flex justify-center">
                <image src="{{item.img}}" style="height:20vw;width:20vw"></image>
              </view>
              <view class="padding text-center text-bold text-lg" style="font-family: 宋体;padding-top:1vh">{{item.title}}</view>
            </view>
          </view>
        </block>
      </view>
    </swiper-item>
  </block>
</swiper>