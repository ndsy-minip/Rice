<!--pages/news/news.wxml-->
<navBar-custom title="心绪宇宙"></navBar-custom>

<scroll-view style="height:150vh" scroll-y="true" show-scrollbar="{{false}}" enhanced="{{true}}">
  <!-- 首行 -->
  <view class="bg-white flex" style="height:15vh">
    <view class="padding flex-twice" style="height: 100%;">
      <view class="text-xl text-bold">Hi! 欢迎来到心绪宇宙!</view>
      <view class="text-grey margin-top">在这里，不同人在不同心绪下所创造的作品汇聚一隅，尽情享受吧！</view>
    </view>
    <view class="flex-sub" style="height: 100%;">
      <image src="cloud://cloud1-3gp8ynahdb4ea1a5.636c-cloud1-3gp8ynahdb4ea1a5-1310409999/william-shakespeare.png" style="width: 30vw;height:15vh" mode="aspectFit"></image>
    </view>
  </view>

  <!-- icon list -->
  <swiper class="margin-top" display-multiple-items="4" style="height:160rpx" next-margin="80rpx">
    <block wx:for="{{iconList}}" wx:key="index">
      <swiper-item>
        <view class="flex justify-center">
          <image src="{{item.iconPath}}" style="height:100rpx;width:100rpx;margin:0 auto;"></image>
        </view>
        <view class="text-center padding-top-xs">{{item.text}}</view>
      </swiper-item>
    </block>

  </swiper>


  <view class="padding flex justify-between align-center" style="padding-bottom: 0;">
    <view class="text-xl text-bold">主要粮食作物</view>
    <view class="text-grey">查看全部 <text class="cuIcon-right"></text></view>
  </view>
  <swiperCard swiperList="{{swiperList}}"></swiperCard>
  <view class="padding flex justify-between align-center" style="padding-bottom: 0;padding-top:0">
    <view class="text-xl text-bold">科学种植技术</view>
    <view class="text-grey">查看全部 <text class="cuIcon-right"></text></view>
  </view>
  <swiperCard swiperList="{{swiperList}}"></swiperCard>
  <view class="padding flex justify-between align-center" style="padding-bottom: 0;padding-top:0">
    <view class="text-xl text-bold">农业现代化</view>
    <view class="text-grey">查看全部 <text class="cuIcon-right"></text></view>
  </view>
  <swiperCard swiperList="{{swiperList}}"></swiperCard>
</scroll-view>