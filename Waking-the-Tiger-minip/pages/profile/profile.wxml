<!--pages/module/module_myPage/profile/profile.wxml-->
<view class="cover-bg" mode="aspectFill"></view>

<view class="cu-list menu-avatar margin-top">
  <view class="cu-item padding" style="margin-top: 12vh;">
    <view class="cu-avatar round xl" style="background-image: url({{userInfo.avatarUrl}});border-style:solid;border-color:white;border-width: 5rpx;"></view>
    <view class="margin-left-lg content text-white text-xl text-bold">
      {{userInfo.nickName}}
    </view>
    <text class="text-white text-lg text-bold margin-right-sm">编辑</text>
    <text class="cuIcon-right text-white text-bold margin-right"></text>
  </view>
</view>

<view class="cu-list menu card-menu" style="margin-top:5vh">
  <view class="cu-item arrow">
    <button class="cu-btn content"><text class="cuIcon-discover text-blue"></text><text class="text-grey">我发布的帖子</text></button>
  </view>
  <view class="cu-item arrow">
    <button class="cu-btn content"><text class="cuIcon-explore text-blue"></text><text class="text-grey">我收藏的帖子</text></button>
  </view>
  <view class="cu-item arrow">
    <button class="cu-btn content"><text class="cuIcon-btn text-blue"></text><text class="text-grey">我的回复</text></button>
  </view>
</view>

<view class="cu-list menu card-menu">
  <view class="cu-item arrow">
    <button class="cu-btn content" bindtap="navToMyNotebook"><text class="cuIcon-btn text-blue"></text><text class="text-grey">我的桃园日记</text></button>
  </view>
  <view class="cu-item arrow">
    <button class="cu-btn content" bindtap="navToNotification"><text class="cuIcon-countdown text-green"></text><text class="text-grey">我的备忘提醒</text></button>
  </view>
  <view class="cu-item arrow">
    <button class="cu-btn content"><text class="cuIcon-like text-red"></text><text class="text-grey">我的测验成绩</text></button>
  </view>
</view>

<view class="cu-list menu card-menu">
  <view class="cu-item arrow" bindtap="navToAbout">
    <button class="cu-btn content"><text class="cuIcon-friend text-cyan"></text><text class="text-grey">关于我们</text></button>
  </view>
  <view class="cu-item arrow">
    <button class="cu-btn content" open-type="contact"><text class="cuIcon-btn text-olive"></text><text class="text-grey" style="font-style: normal;">联系我们</text></button>
  </view>
</view>

<view class="cu-list menu card-menu">
  <view class="cu-item arrow">
    <button class="cu-btn content" open-type="share"><text class="cuIcon-share text-olive"></text><text class="text-grey">分享给好友</text></button>
  </view>
</view>