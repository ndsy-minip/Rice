<!--pages/detailContent/detailContent.wxml-->
<view class="background-image"></view>
<view class="mask"></view>

<view style="height:40vh;position: relative">  <!-- 这一层确保背景图下面的内容露出来 -->
  <view class="padding" style="height:10vh;position: relative;">
    <view style="height:5vh"></view>
    <view style="width:15vw;height:3vh" bindtap="goBack">
      <text class="cuIcon-back text-white text-xl"></text>
    </view>
    <view class="padding flex">
      <view class="flex-sub">
        <image src="https://ossweb-img.qq.com/images/lol/web201310/skin/big37006.jpg" mode="aspectFill" style="height:15vh;width: 25vw;"></image>
      </view>
      <view class="flex-twice">
        <view class="padding text-xl text-white text-bold">雪崩</view>
        <view class="padding text-white">美国·斯蒂芬森</view>
      </view>
    </view>
  </view>
  <scroll-view class="nav text-white" scroll-x="{{true}}" scroll-with-animation="{{true}}" style="position: absolute;bottom:0">
    <view class="cu-item {{tabCur==0?'text-white cur':''}}" bindtap="switchTab" data-index="0">短评</view>
    <view class="cu-item {{tabCur==1?'text-white cur':''}}" bindtap="switchTab"  data-index="1">摘录</view>
  </scroll-view>
</view>
