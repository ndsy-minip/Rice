<view class="tabbar">
  <view class="item {{index==idx?'active':''}}" wx:for="{{list}}" wx:for-index="idx" bindtap="goto" data-index='{{idx}}'>
    <view style="background-image: url({{item.iconPath}});"></view>
    <view class="text">{{item.text}}</view>
  </view>
  <view class="move" style="left:{{115+(index*210)}}rpx"></view>
</view>