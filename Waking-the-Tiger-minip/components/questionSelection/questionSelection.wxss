/* components/questionSelection/questionSelection.wxss */
@import "../../colorui/main.wxss";
@import "../../colorui/icon.wxss";

/* 圆圈样式 */
.circle-item {
  border-style: solid;
  border-radius: 50%;
  width: 70rpx;
  height: 70rpx;
  border-width: 2rpx;
  border-color: #0081ff;
}

/*模态框*/
.modals-cancel {
  position: absolute;
  z-index: 1000;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.bottom-dialog-body {
  position: absolute;
  z-index: 10001;
  bottom: 0;
  left: 0;
  right: 0;
  height: 680rpx;
  background-color: #fff;
}

/*动画前初始位置*/
.bottom-pos {
  -webkit-transform: translateY(100%);
  transform: translateY(100%);
}